{
  "name": "react-ts-webpack",
  "version": "1.0.0",
  "description": "react + typescript + webpack template",
  "main": "dist/index.js",
  "private": true,
  "scripts": {
    "start": "run-s clean prod:*",
    "prod:build": "cross-env NODE_ENV=\"production\" webpack-cli --config webpack.prod.ts",
    "prod:server": "http-server ./dist -a 127.0.0.1 -p 4000 -d 'false' -o",
    "dev": "run-s clean dev:*",
    "dev:server": "cross-env NODE_ENV=\"development\" webpack-cli serve --config webpack.dev.ts",
    "clean": "node -e 'fs.rmSync(`dist`, {recursive:true, force:true})';",
    "build": "run-s clean prod:build"
  },
  "author": "DongHeon Lee <niche3600@gmail.com> (https://github.com/leeddhh)",
  "license": "MIT",
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.6",
    "@types/node": "^17.0.10",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "html-webpack-plugin": "^5.5.0",
    "http-server": "^14.1.0",
    "mini-css-extract-plugin": "^2.5.2",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "source-map-loader": "^3.0.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}
